<UserControl x:Class="BaiduSearch.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BaiduSearch"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Source="https://www.baidu.com/img/bd_logo1.png" Grid.Row="1" />
        <StackPanel  Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox Height="40" Width="500" VerticalContentAlignment="Center" FontSize="20" Focusable="True" x:Name="wd"></TextBox>
            <Button Height="40" Padding="10" Background="#3385ff" Foreground="White" BorderThickness="0" Name="su">百度一下</Button>
        </StackPanel>
    </Grid>
</UserControl>
